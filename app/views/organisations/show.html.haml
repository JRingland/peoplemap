
%h1
  = @object.name
%ul{:id => "node_menu"}
  %li
    = link_to '<b>organisation</b>finder', organisations_path
  %li
    = link_to 'edit', edit_organisation_path(@object)
  %li
    = link_to 'delete', @object, :confirm => 'Are you sure?', :method => :delete

%table{:cellpadding => "0", :cellspacing => "0", :border => "0", :id => "node_info", :width => "100%"}
  %tr
    %th{:width => "95px"}
      Profile Image
    %th{:colspan => "2"}
      Detailed Information
    %th{:width => "400px"}
      Notes
    %th{:width => "*"}
      Related Images
  %tr
    %td{:class => "node_info_value", :rowspan => "3"}
      PICTURE HERE
    %td{:class => "node_info_label", :width => "100px"}
      Name
    %td{:class => "node_info_value", :width => "200px"}
      = @object.name
    %td{:class => "node_info_value", :rowspan => "3"}
      = @object.notes
    %td{:class => "node_info_value", :rowspan => "3"}
      IMAGE GALLERY HERE
  %tr
    %td{:class => "node_info_label"}
      Sector
    %td{:class => "node_info_value"}
      = @object.sector
  %tr
    %td{:class => "node_info_label"}
      Industry
    %td{:class => "node_info_value"}
      = @object.industry

  - @origin = @object

%table{:cellpadding => "0", :cellspacing => "0", :border => "0", :width => "100%"}
  %tr
    %td{:style => "vertical-align: top; border-left: solid 1px #999999;"}

      %h2
        People Relationships

      = render( :partial => "shared/filtered_target", :object => @origin, :locals => {:level_1_rel => "org_to_person", :level_2_rel => "org_to_person", :level_3_rel => "org_to_person"})

      %h2
        Related Organisations

      = render( :partial => "shared/filtered_target", :object => @origin, :locals => {:level_1_rel => "org_to_org", :level_2_rel => "org_to_org", :level_3_rel => "org_to_org"})


  = render( :partial => "shared/all_nodes", :object => @origin )
