<% Neo4j::Transaction.run do %>
<h1><b>organisation</b>finder</h1>
<p><%= link_to 'New organisation', new_organisation_path %></p>
<table cellpadding="0" cellspacing="0" border="0" class="node_list">
  <tr>
    <th>Name</th>
    <th>Sector</th>
    <th>Industry</th>
    <th colspan="3"></th>
  </tr>
<% @organisations.each do |organisation| %>
  <tr class="<%= cycle('list_odd', 'list_even') %>">
    <td><%= organisation.name %></td>
    <td><%= organisation.sector %></td>
    <td><%= organisation.industry %></td>
    <td><%= link_to 'Show', :action => "show", :id => organisation %></td>
    <td><%= link_to 'Edit', edit_organisation_path(organisation) %></td>
    <td><%= link_to 'Destroy', organisation, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<br/>
<% end %>