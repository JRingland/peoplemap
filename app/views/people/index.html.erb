<% Neo4j::Transaction.run do %>
<h1><b></>people</b></>finder</h1>
<p><%= link_to 'New person', new_person_path %></p>
<table cellpadding="0" cellspacing="0" border="0" class="node_list">
  <tr>
    <th>Name</th>
    <th>Date of Birth</th>
    <th colspan="3"></th>
  </tr>
<% @people.each do |person| %>
  <tr class="<%= cycle('list_odd', 'list_even') %>">
    <td><%= person.title %> <%= person.first_name %> <%= person.surname %></td>
    <td><%= person.date_of_birth %></td>
    <td><%= link_to 'Show', :action => "show", :id => person %></td>
    <td><%= link_to 'Edit', edit_person_path(person) %></td>
    <td><%= link_to 'Destroy', person, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<br />
<% end %>