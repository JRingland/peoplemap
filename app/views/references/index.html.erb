<% Neo4j::Transaction.run do %>
<h1><b>reference</b>finder</h1>
<p><%= link_to 'New reference', new_reference_path %></p>
<table cellpadding="0" cellspacing="0" border="0" class="node_list">
  <tr>
    <th>Type</th>
    <th>Value</th>
    <th colspan="3"></th>
  </tr>
<% @references.each do |reference| %>
  <tr class="<%= cycle('list_odd', 'list_even') %>">
    <td><%= reference.reference_type %></td>
    <td><%= reference.ref_value %></td>
    <td><%= link_to 'Edit', edit_reference_path(reference) %></td>
    <td><%= link_to 'Show', reference %></td>
    <td><%= link_to 'Destroy', reference, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<br/>
<% end %>