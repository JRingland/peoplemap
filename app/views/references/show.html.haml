%h1
  = @object.ref_value
%ul{:id => "node_menu"}
  %li
    = link_to '<b>reference</b>finder', reference_path
  %li
    = link_to 'edit', edit_reference_path(@object)
  %li
    = link_to 'delete', @object, :confirm => 'Are you sure?', :method => :delete
%table{:cellpadding => "0", :cellspacing => "0", :border => "0", :id => "node_info", :width => "100%"}
  %tr
    %th{:width => "115px"}
      Reference Type
    %th{:width => "300px"}
      Value
    %th{:width => "*"}
      Notes
  %tr
    %td{:class => "node_info_value"}
      = @object.reference_type
    %td{:class => "node_info_value"}
      = @object.ref_value
    %td{:class => "node_info_value"}
      = @object.notes
    %td{:class => "node_info_value"}
      = @object.notes

- @person_model = ["person_to_person","person_to_person","person_to_person"]
- @org_model = ["person_to_org","person_to_org","nil"]
- @loc_model = ["person_to_loc","person_to_loc","nil"]
- @event_model = ["person_to_event","person_to_event","nil"]
- @ref_model = ["person_to_ref","person_to_ref","nil"]

= render( :partial => "shared/list_rels", :object => @object, :locals => {:person_model => @person_model, :org_model => @org_model, :loc_model => @loc_model, :event_model => @event_model, :ref_model => @ref_model})

= render( :partial => "shared/all_nodes", :object => @object )
      