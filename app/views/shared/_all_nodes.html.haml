%table{:cellpadding => "0", :cellspacing => "0", :border => "0", :width => "100%"}
  %tr
    %td{:class => "all_nodes_list", :rowspan => "2"}
      %h2 
        people 
        %span{:class => "new_node_link"}
          = link_to '[+]', new_person_path
      %table{:cellpadding => "0", :cellspacing => "0", :border => "0", :width => "100%"}
        - @people.each do |person|
          - if (person.neo_node_id != object.neo_node_id) then
            %tr{:class => cycle('list_odd', 'list_even')}
              %td
                = link_to person.first_name + ' ' + person.surname, :action => "show", :id => person
              %td{:class => "all_nodes_list_item"}
                = render( :partial => "shared/relationship_form", :object => object, :locals => {:link_category_table => Person::TO_PERSON_LINK_CATEGORIES, :target => person})

